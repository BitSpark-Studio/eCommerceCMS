@model IEnumerable<eCommerceSite.Models.Customer.ProductCetagoryOwner>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/CustomerLayOut.cshtml";
    var data = Model.ToList();
}

<h1>@data[0].Cetagory_Title</h1> <br/>
<img src="~/CetagoryPicture/@data[0].Cetagory_Photo" width="100" height="100">

<br/><br />

<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i> @data[0].Cetagory_Details </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Product_Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product_Description)
                        </th>

                        <th></th>
                    </tr>
                </thead>


                <tbody>
                    @for (int i = 1; i < data.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => data[i].Product_Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => data[i].Product_Description)
                            </td>

                            <td>
                                <button onclick="Product(@data[i].PID)" data-toggle="modal" data-target="#exampleModalCenter"> More Details </button> 
                            </td>
                        </tr>
                    }
                </tbody>
                

            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <img id="img1" src="" width="100" height="100"> &nbsp; &nbsp;
                <img id="img2" src="" width="100" height="100"> &nbsp; &nbsp;
                <img id="img3" src="" width="100" height="100"> &nbsp; &nbsp;

                <br /><br />

                <h5>Details</h5>
                <p id="Details">  </p>

                <br /> <br />

                <h5>Owner Details</h5>
                <br />
                <img id="dp" src="" width="100" height="100"><br/><br />

                <h6>Name</h6> <p id="Name">  </p>
                <h6>Phone</h6> <p id="Phone">  </p>
                <h6>Email</h6> <p id="Email">  </p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

<script src="~/API_Action/ProductAndOwnerDetails.js"></script>



